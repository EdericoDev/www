---
import BaseLayout from '../layouts/BaseLayout.astro';
import TypewriterTitle from '../components/TypewriterTitle.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Button from '../components/button.astro';
import Badge from "../components/Badge.astro";
import Spotify from '../components/Spotify.svelte';
import Osu from '../components/Osu.svelte';

const projects = [
    {
        imgSrc: "/img/catch.png",
        title: "CatchTheBalls",
        description: "My first python game. Pretty simple but I wanted to showcase anyway.",
        buttonHref: "https://github.com/EdericoDev/catchtheballs",
        buttonText: "Go to github page",
        buttonStyle: "#c99388"
    },
    {
        imgSrc: "/img/temp.gif", 
        title: "SimpleRPG",
        description: "Turn Based RPG, written in Python.",
        buttonHref: "https://github.com/EdericoDev/ede-tbrpg",
        buttonText: "Go to github page",
        buttonStyle: "#c99388"
    },
    {
        imgSrc: "/img/widget.png", 
        title: "Spotify and Osu Widgets",
        description: "Use the widgets of this site on yours with a simple tutorial included!",
        buttonHref: "https://github.com/EdericoDev/media-widgets",
        buttonText: "Go to github page",
        buttonStyle: "#c99388" 
    },
];

---

<BaseLayout title="ederico.dev">
    <header class="py-8">
        <div class="container mx-auto px-4 sm:px-8">
            <TypewriterTitle/>
        </div>
    </header>

    <main class="py-16">
        <div class="container mx-auto px-4 sm:px-8">

            <section class="mb-16">
                <Spotify client:load />
                <Osu client:load />
                <h2 class="text-3xl font-bold mb-4 text-center">About Me</h2>
                <p class="text-lg mx-auto max-w-2xl text-justify">
                    My nickname is edericodev or edericogames (he/him) and I'm a 15 years-old beginner self taught developer based in <Badge type="italy" href="https://youtu.be/drojd1HYtcM?si=xvjPnkDNgscCGHqA" label="Italy" />. <br> I love open source and I'm always looking for new ideas.
                    Since birth I've always been a windows user. My favorite tools for exploring this awesome world include: VSCode, CodePen, GitHub , and <Badge type="spotify" href="https://open.spotify.com/user/31w3g2o6tkydwgjzyuntt42gpi54?si=fdeb7fa8d94e45b7" label="spotify" /> as a support.
                    I work daily with tons of frameworks, and some of them (Astro, Tailwind , vercel) are right on this site!
                    But i also love coding with code languages like python , Javascript , HTML and CSS (even if they're not coding languages).
                </p>
                <div class="flex justify-center mt-4">
                </div>
            </section>
            

            <section class="mb-16">
                <h2 class="text-3xl font-bold mb-8 text-center">My Projects</h2>
                <div class="flex overflow-x-auto snap-x snap-mandatory">
                    {projects.map(project => (
                        <ProjectCard {...project} />
                    ))}
                </div>
            </section>

            <section class="mb-16">
                <h2 class="text-3xl font-bold mb-4 text-center">Contact Me</h2>
                <p class="text-lg text-center mx-auto max-w-2xl">
                    Feel free to reach out via email.
                </p>
                <div class="flex justify-center mt-4">
                    <Button 
                        href="mailto:hello@ederico.dev" 
                        text="Email Me" 
                        style="blue" 
                    />
                </div>
            </section>
        </div>
    </main>

    <footer class="py-8">
        <div class="container mx-auto text-center text-gray-400">
            &copy; {new Date().getFullYear()} My Portfolio. All rights reserved.
        </div>
    </footer>
</BaseLayout>