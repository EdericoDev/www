---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';  // Main layout with header/footer
import Button from '../components/button.astro';  // Custom Button component with hover effect
import Typewriter from '../components/typewriter.astro';  // Typewriter effect for titles
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="hero-section min-h-screen flex flex-col items-center justify-center bg-black text-white">
    <!-- Typewriter Effect for the main title -->
    <Typewriter text="Welcome to My Digital World" />
    
    <p class="mt-4 text-center max-w-xl text-gray-300">
      I'm a passionate web developer who creates modern and visually striking web applications.
      Explore my work and get to know more about my expertise in frontend development.
    </p>

    <!-- Button Links -->
    <div class="mt-8 flex space-x-4">
      <!-- Buttons for navigating to different sections -->
      <Button text="View Projects" />
      <Button text="Contact Me" />
    </div>
  </section>

  <!-- Projects Section -->
  <section class="projects-section mt-16 text-center">
    <h2 class="text-3xl text-neon mb-8">Featured Projects</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      <!-- Example Project Cards -->
      <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-bold text-white">Project 1</h3>
        <p class="text-gray-400 mt-2">An exciting project that showcases my skills in frontend development.</p>
      </div>

      <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-bold text-white">Project 2</h3>
        <p class="text-gray-400 mt-2">Another cool project with modern UI and animations.</p>
      </div>

      <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-bold text-white">Project 3</h3>
        <p class="text-gray-400 mt-2">A personal project built with Solid.js and Astro.</p>
      </div>
    </div>
  </section>
</BaseLayout>

