---
import { ViewTransitions } from 'astro:transitions';
import Sidebar from '../components/Sidebar.astro';
import { Image } from 'astro:assets';

const { title, frontmatter } = Astro.props;
const pageTitle = frontmatter?.title || title || "Ederico's Website";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={frontmatter?.description || "Ederico's personal website"} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<ViewTransitions />
	</head>
	<body class="bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-gray-100 min-h-screen">
		<div class="flex flex-col md:flex-row min-h-screen">
			<Sidebar />
			<main class="flex-1 p-6 md:p-10 max-w-4xl mx-auto">
				{frontmatter?.title && (
					<header class="mb-8">
						<h1 class="text-3xl font-bold mb-2">{frontmatter.title}</h1>
						{frontmatter.date && <p class="text-gray-600 dark:text-gray-400">{frontmatter.date}</p>}
						{frontmatter.description && <p class="text-lg mt-2">{frontmatter.description}</p>}
					</header>
				)}
				<div class="prose dark:prose-invert max-w-none bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
					<slot />
				</div>
			</main>
		</div>
	</body>
</html>
