---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body class="bg-gray-100">
  <header class="text-center py-4 text-white">
    <h1>{title}</h1>
  </header>
  <main>
    <slot />
  </main>
  <footer class="text-center py-4 mt-8 text-white">
  </footer>
</body>
</html>