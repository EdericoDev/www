---
// src/components/Typewriter.astro
import { onMount } from 'solid-js';

export let text = "Hello, I'm a Developer";
let animatedText = '';

const typingSpeed = 100;

onMount(() => {
  let i = 0;
  const typeWriter = setInterval(() => {
    if (i < text.length) {
      animatedText += text[i];
      i++;
    } else {
      clearInterval(typeWriter);
    }
  }, typingSpeed);
});
---

