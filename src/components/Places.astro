---
import { Icon } from "astro-icon/components";

interface Place {
  name: string;
  url: string;
  visitDate?: string;
  icon: string;
}

const places: Place[] = [
  {
    name: "Linux Day 2023/2024",
    url: "https://www.linuxday.it/2024/",
    icon: "linuxday"
  }
];
---

<div class="places-widget">
  <div class="relative w-full not-prose">
    <div class="rounded-lg border border-zinc-200 dark:border-zinc-700 p-4 bg-white dark:bg-zinc-900 shadow-md">
      <ul class="space-y-3">
        {places.map(({ name, url, visitDate, icon }) => (
          <li class="flex items-center gap-3 p-3 bg-zinc-50 dark:bg-zinc-800 rounded-lg hover:bg-zinc-100 dark:hover:bg-zinc-700 transition-all">
            <Icon name={icon} class="h-5 w-5 text-gray-800 dark:text-white" />
            <a href={url} target="_blank" rel="noopener noreferrer" class="text-zinc-800 dark:text-zinc-100 font-medium hover:underline flex-grow">
              {name}
            </a>
            {visitDate && (
              <span class="text-sm text-gray-600 dark:text-gray-300 ml-2 italic">
                {visitDate}
              </span>
            )}
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>

<style>
  .places-widget {
    max-width: 400px;
    margin: 2rem auto;
  }
</style>
