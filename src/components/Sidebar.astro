---
// Sidebar.astro
const links = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Projects", href: "/projects" },
];
---

<aside class="bg-white text-black w-60 min-h-screen p-6 fixed top-0 left-0 shadow-lg">
  <h1 class="text-xl font-bold mb-6">ederico.dev</h1>
  <nav class="flex flex-col gap-4 text-sm">
    {links.map(link => (
      <a
        href={link.href}
        class="hover:underline transition duration-300 ease-in-out hover:text-blue-500"
      >
        {link.name}
      </a>
    ))}
  </nav>
</aside>

