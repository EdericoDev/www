---
import Button from "./Button.astro";

const { imgSrc, title, description, buttonHref, buttonText, buttonStyle } = Astro.props;
---

<div class="bg-gray-800 rounded-lg p-4 shrink-0 w-64 mr-4 snap-center transition-transform transform hover:scale-105">
    <img src={imgSrc} alt={title} class="rounded-lg mb-4 h-40 w-full object-cover">
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-gray-400 mb-4">{description}</p>
    <Button href={buttonHref} text={buttonText} style={buttonStyle} />
</div>

